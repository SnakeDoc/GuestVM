# Recursive listing of an ext2 file system disk
#
# Resolve location of this script
    me="${BASH_SOURCE[0]}"
    while [ -h "$me" ]; do
        me=`readlink -e "$me"`
    done

me_dir=`dirname $me`
. $me_dir/ext2setup

ext2dir="/"

while [ "$1" != "" ];
do
  case $1 in
   -dir )
   shift
   ext2dir=$1
   ;;
  * )
   break
   ;;
  esac
  shift
done

java -classpath $cp $h $mc ls -disk $dfile -ext2path $ext2dir $*
